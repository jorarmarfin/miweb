---
import { Icon } from 'astro-icon/components'
import SocialShared from "../ui/SocialShared.astro";

---
<footer class="bg-gray-900 text-gray-300 py-8">
    <div class="container mx-auto px-6">
        <!-- Logo y breve descripción -->
        <div class="flex flex-col md:flex-row justify-between items-center border-b border-gray-700 pb-6 mb-6">
            <div class="text-center md:text-left mb-6 md:mb-0">
                <h2 class="text-xl font-bold text-white">Luis Mayta</h2>
                <p class="text-gray-400 mt-2">
                    Construyendo soluciones tecnológicas con pasión y dedicación.
                </p>
            </div>
        <SocialShared />
        </div>

        <!-- Links de Navegación -->
        <div class="flex flex-col md:flex-row justify-between items-center">
            <p class="text-sm text-gray-500">
                © 2025 Luis Mayta. Todos los derechos reservados.
            </p>
            <div class="flex space-x-4 mt-4 md:mt-0">
                <a href="#about" class="text-gray-400 hover:text-white text-sm">Sobre mí</a>
                <a href="#services" class="text-gray-400 hover:text-white text-sm">Servicios</a>
                <a href="#contact" class="text-gray-400 hover:text-white text-sm">Contacto</a>
            </div>
        </div>
    </div>
</footer>
