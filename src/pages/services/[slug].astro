---
import Layout from "../../layouts/Layout.astro";
import {getCollection} from "astro:content";
import {render,getEntry} from "astro:content";
export const getStaticPaths = ( async () => {
    const services = await getCollection('servicesContent');
    return services.map((service) => ({
        params: { slug: service.id },
        props: service,
    }));
}) satisfies GetStaticPaths;

const { slug } = Astro.params;
const service = Astro.props;
const entry = await getEntry('servicesContent', slug);
const {Content} = await render(entry);
---
<Layout title={service.data.title}>

     Página Estática para el servicio "DevOps"
    <section class="min-h-screen bg-gray-100 pt-20">
        <!-- Encabezado -->
        <header class="bg-gradient-to-r from-blue-600 to-purple-700 text-white py-16">
            <div class="container mx-auto px-6 text-center">
                <h1 class="text-4xl font-bold">{service.data.title}</h1>
                <p class="mt-4 text-lg">
                    {service.data.description}
                </p>
            </div>
        </header>

        <!-- Contenido Principal -->
        <div class="container mx-auto px-6 py-12">
            <div class="flex flex-col lg:flex-row items-center gap-8">
                <!-- Imagen -->
                <div class="w-full lg:w-1/2">
                    <img src={service.data.imagen} alt="DevOps" class="rounded-lg shadow-lg" />
                </div>

                <!-- Beneficios -->
                <div class="w-full lg:w-1/2">
                    <h2 class="text-2xl font-bold mb-4">Características Clave</h2>
                    <ul class="space-y-4">
                        <li class="flex items-start">
                            <span class="w-6 h-6 flex items-center justify-center bg-blue-600 text-white rounded-full mr-4">✔</span>
                            <p>Integración continua (CI/CD)</p>
                        </li>
                        <li class="flex items-start">
                            <span class="w-6 h-6 flex items-center justify-center bg-blue-600 text-white rounded-full mr-4">✔</span>
                            <p>Automatización de despliegues</p>
                        </li>
                        <li class="flex items-start">
                            <span class="w-6 h-6 flex items-center justify-center bg-blue-600 text-white rounded-full mr-4">✔</span>
                            <p>Monitoreo en tiempo real</p>
                        </li>
                        <li class="flex items-start">
                            <span class="w-6 h-6 flex items-center justify-center bg-blue-600 text-white rounded-full mr-4">✔</span>
                            <p>Infraestructura como código (IaC)</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container mx-auto">
            <Content />
        </div>
        <!-- Llamado a la Acción -->
        <div class="bg-white py-12">
            <div class="container mx-auto text-center">
                <h2 class="text-2xl font-bold mb-4">¿Quieres saber más?</h2>
                <p class="mb-6 text-gray-700">
                    Ponte en contacto con nosotros para conocer cómo DevOps puede transformar tu negocio.
                </p>
                <a href="/contact" class="px-6 py-3 bg-blue-600 text-white font-medium rounded-lg shadow-lg hover:bg-blue-700">
                    Contáctanos
                </a>
            </div>
        </div>
    </section>
</Layout>